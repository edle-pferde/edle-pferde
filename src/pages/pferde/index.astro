    <div class="page-width mx-auto px-4 space-y-12">
        <div class="space-y-4 text-2xl">
            <h1>Alle Pferde</h1>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
              {activeHorses.map(horse => (
                      <HorseCard horse={horse} showForSaleLabel/>
              ))}
            </div>
        </div>
        <a href="/ehemalige-pferde">
            <div class="w-fit px-8 py-4 bg-brand rounded-full font-semibold text-white text-lg">
                Zu den ehemaligen Pferden
            </div>
        </a>
    </div>
</Layout>
