---
import {IconHorse, IconUserHeart, IconMedal, IconMapPin} from "@tabler/icons-react"
---
<div class="flex flex-col -mt-16">
  <img src="/hero.png" class="h-[50vh] md:h-[80vh] object-cover"  alt="Cover image"/>
  <div class="px-4">
    <div class="mx-auto -mt-20 grid gap-px md:grid-cols-4 grid-cols-2 page-width items-center bg-gray-200 overflow-auto rounded-2xl shadow-2xl">
      <div class="flex flex-col items-center p-8 space-y-3 bg-white h-full justify-center">
        <IconHorse className="text-primary-800 size-10" />
        <div class="relative w-fit font-normal text-brand text-base text-center text-balance">
          Familiäre Pferdezucht
        </div>
      </div>
      <div class="flex flex-col items-center p-8 space-y-3 bg-white h-full justify-center">
        <IconUserHeart className="text-primary-800 size-10" />
        <div class="relative w-fit font-normal text-brand text-base text-center text-balance">
          Über 30 Jahren Erfahrung
        </div>
      </div>
      <div class="flex flex-col items-center p-8 space-y-3 bg-white h-full justify-center">
        <IconMedal className="fill-primary-800 size-10 stroke-primary-800" />
        <div class="relative w-fit font-normal text-brand text-base text-center text-balance">
          Individuelle Ausbildung
        </div>
      </div>
      <div class="flex flex-col items-center p-8 space-y-3 bg-white h-full justify-center">
        <IconMapPin className="text-primary-800 size-10" />
        <div class="relative w-fit font-normal text-brand text-base text-center text-balance">
          Im Herzen des Hausruckviertels
        </div>
      </div>
    </div>
  </div>
</div>