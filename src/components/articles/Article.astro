---
import Image from 'astro/components/Image.astro'
const {article} = Astro.props
---
<a href={`/articles/${article.slug}`}>
  <div class="flex flex-col sm:flex-row rounded-2xl bg-white overflow-auto shadow">
    <Image
      src={article.data.cover_image}
      alt={`Cover image for ${article.slug}`}
      width={500}
      class="aspect-4/3 w-full sm:w-60 object-cover"
    />
    <div class="px-8 py-4 space-y-2">
      <h1 class="font-semibold text-xl line-clamp-2">{article.data.title}</h1>
      <p class="line-clamp-3">{article.body}</p>
    </div>
  </div>
</a>