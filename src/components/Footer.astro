---
import {IconMail, IconPhone, IconDeviceMobile} from '@tabler/icons-react'
const {address, email_address, phone_number, mobile_phone_number} = await reader.singletons.contact.read();
---
<footer class="mt-16 border-t border-primary-500 py-16 space-y-16 bg-white">
	<div class="max-w-5xl px-4 mx-auto flex flex-col lg:flex-row justify-evenly lg:items-end items-center lg:text-left text-center lg:space-y-0 space-y-8">
		<div class="flex-1 space-y-4">
			<div class="font-semibold">Familie Pramendorfer</div>
			<div class="whitespace-pre-line">{address}</div>
		</div>
		<div class="flex-1">
			<div>
				<div class="flex items-center space-x-2">
					<IconMail className='text-primary-800' />
					<div class="">{email_address}</div>
				</div>
				<div class="flex items-center space-x-2">
					<IconPhone className='text-primary-800' />
					<div class="">{phone_number}</div>
				</div>
				<div class="flex items-center space-x-2">
					<IconDeviceMobile className='text-primary-800' />
					<div class="">{mobile_phone_number}</div>
				</div>
			</div>
		</div>
		<div class="flex-1">
			<div>
				<a href="/about-us" class="hover:underline">Über uns</a>
			</div>
			<div>
				<a href="/impressum" class="hover:underline">Impressum</a>
			</div>
		</div>
	</div>
	<div class="text-center text-nowrap text-sm">© 2025 Edle Pferde</div>
</footer>