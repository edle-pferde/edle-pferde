---
import type {ImageMetadata} from 'astro';
import Image from 'astro/components/Image.astro';
const allCoverImages = import.meta.glob<{
  default: ImageMetadata
}>('/src/assets/cover_images/articles/*/*.{jpeg,jpg,png,gif,webp}');
const {article} = Astro.props;
const imagePathKey = `/src/assets/cover_images/articles/${article.slug}/cover_image.jpg`;
const imageImport = allCoverImages[imagePathKey];
---
<a href={`/articles/${article.slug}`} class="px-8 w-full">
    <div class="relative">
        <Image src={imageImport()}
               alt={`Cover image for ${article.slug}`}
               width={960}
               class="aspect-video object-cover z-50 rounded-2xl"
        />
        <div class="absolute inset-0 bg-gradient-to-t from from-black via-transparent z-20 rounded-b-2xl"/>
        <div class="absolute bottom-8 inset-x-8 text-white z-30 space-y-4">
            <h1 class="text-3xl font-semibold line-clamp-1">{article.data.title}</h1>
            <p class="line-clamp-2">{article.body}</p>
        </div>
    </div>
</a>