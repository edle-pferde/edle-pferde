---

import IconColorPalette from "../../icons/IconColorPalette.astro";
import IconFaceId from "../../icons/IconFaceId.astro";
import IconRuler from "../../icons/IconRuler.astro";
import IconCalendar from "../../icons/IconCalendar.astro";---

<div class="flex items-start justify-center gap-16 relative self-stretch w-full flex-[0_0_auto] bg-white rounded-2xl overflow-hidden shadow-[0px_7px_15px_#0000001a,0px_27px_27px_#00000017,0px_60px_36px_#0000000d,0px_108px_43px_#00000003,0px_168px_47px_transparent]">
    <div class="flex flex-col items-start justify-between relative flex-1 self-stretch grow">
        <div class="px-16 py-12">
            <div class="relative self-stretch mt-[-1.00px] font-normal text-[#04482c] text-[32px] tracking-[0] leading-[34.2px]">
                Sch√∂ne Schwalbe
                <br/>
                v. Connery
            </div>

            <div class="flex flex-col items-start gap-px relative self-stretch w-full flex-[0_0_auto] bg-[#0000001a]">
                <div class="flex h-16 items-center justify-center gap-4 relative self-stretch w-full bg-white">
                    <IconCalendar/>

                    <div class="relative flex-1 font-normal text-[#1e1e1e] text-base tracking-[0] leading-4">
                        YYYY, X Jahre alt
                    </div>
                </div>

                <div class="flex h-16 items-center justify-center gap-4 relative self-stretch w-full bg-white">
                    <IconFaceId/>

                    <div class="relative flex-1 font-normal text-[#1e1e1e] text-base tracking-[0] leading-4">
                        Trakehner
                    </div>
                </div>

                <div class="flex h-16 items-center justify-center gap-4 relative self-stretch w-full bg-white">
                    <IconRuler/>

                    <div class="relative flex-1 font-normal text-[#1e1e1e] text-base tracking-[0] leading-4">
                        170 cm
                    </div>
                </div>

                <div class="flex h-16 items-center justify-center gap-4 relative self-stretch w-full bg-white">
                    <IconColorPalette/>


                    <div class="relative flex-1 font-normal text-[#1e1e1e] text-base tracking-[0] leading-4">
                        Fuchs
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="flex flex-col w-[512px] items-center justify-center relative">
        <div class="w-96 h-96 bg-[#ffe2b0] rounded-full m-8"/>

        <img
                class="absolute inset-x-0 top-8 object-cover"
                alt="Element"
                src="/millie.png"
        />
    </div>
</div>